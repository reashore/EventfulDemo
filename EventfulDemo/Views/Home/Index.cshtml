
@using EventfulDemo.Web.Models;
@model SearchViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Eventful Demo</h1>
    <p class="lead">Eventful Demo illustrates making REST requests to the Eventful web site</p>
</div>

<h1>Search Events</h1>

@using (Html.BeginForm("Index", "Home"))
{
    @Html.ValidationSummary()

    @Html.LabelFor(m => m.Location)
    @Html.TextBoxFor(m => m.Location)  

    @Html.ValidationMessageFor(m => m.Location)

    <input id="SearchEventsByLocation" name="SearchEventsByLocation" type="submit" value="Seach by Location"/>
}

